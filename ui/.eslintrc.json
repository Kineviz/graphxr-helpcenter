{
  "root": true,
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "globals": {
    "Promise": "readonly",
    "Map": "readonly"
  },
  "plugins": [],
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "eqeqeq": "warn",
    "curly": "warn",
    "no-extra-semi": "warn"
  },
  "ignorePatterns": [
    "build/",
    "public/",
    "node_modules/",
    "antora-playbook.yml",
    "*/_*/",
    "*.adoc",
    "*.yml"
  ]
}
